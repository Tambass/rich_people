<%- include('./partials/header')-%>

<%- include('./partials/_add_btn.ejs')-%>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <form method="POST" action="/add">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="classement">Classement</label>
                            <input type="text" class="form-control" name="classement" value="<%=people.classement%>">
                        </div>
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" name="lastname" value="<%=people.lastname%>">
                        </div>
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" name="firstname" value="<%=people.firstname%>">
                        </div>
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="text" class="form-control" name="age" value="<%=people.age%>">
                        </div>
                        <div class="form-group">
                            <label for="nationnality">Nationnalité</label>
                            <select class="form-control" name="nationnality" value="<%=people.nationnality%>">
                                <option>Américain</option>
                                <option>Français</option>
                                <option>Anglais</option>
                                <option>Espagnol</option>
                            </select>
                        </div>

                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="wealth">Fortune</label>
                            <input type="text" class="form-control" name="wealth" value="<%=people.wealth%>">
                        </div>
                        <div class="form-group">
                            <label for="factory">Entreprise</label>
                            <input type="text" class="form-control" name="factory" value="<%=people.factory%>">
                        </div>
                        <div class="form-group">
                            <label for="business">Secteur</label>
                            <select class="form-control" name="business" value="<%=people.business%>">
                                <option>E-commerce</option>
                                <option>Trader</option>
                                <option>Réseaux sociaux</option>
                                <option>Informatique</option>
                                <option>Mode</option>
                                <option>Grande distribution</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select class="form-control" name="status" value="<%=people.status%>">
                                <option>Millionnaire</option>
                                <option>Milliardraire</option>
                                <option>Trillionnaire</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="image">Url de l'image</label>
                            <input type="text" class="form-control" name="image" value="<%=people.image%>">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>

                    </div>
                </div>

            </form>

        </div>
    </div>
</div>



<%- include('./partials/footer')-%>