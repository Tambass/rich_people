<%- include('./partials/header')-%>

<%- include('./partials/_add_btn.ejs')-%>

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-12">

            <h1><%=people.firstname%> <%=people.lastname%></h1>

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="<%=people.image%>" class="card-img" alt="<%=people.firstname%> <%=people.lastname%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Position : <%=people.classement%></h5>
                            <p class="card-text">Age : <%=people.age%> ans</p>
                            <p class="card-text">Nationnalité : <%=people.nationnality%></p>
                            <p class="card-text">Fortune : <%=people.wealth%></p>
                            <p class="card-text">Entreprise : <%=people.factory%></p>
                            <p class="card-text">Secteur d'activité : <%=people.business%></p>
                            <p class="card-text">Status : <%=people.status%></p>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/">
                <button type="button" class="btn-primary">Edit</button>
            </a>
            <a href="/">
                <button type="button" class="btn-danger">Delete</button>
            </a>
        </div>
    </div>
</div>

<%- include('./partials/footer')-%>